<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.iessanalberto.dam2.proyecto_tfg.peliculas.list.MovieListFragment"
        android:label="Películas en portada"
        tools:layout="@layout/fragment_movie_list">
        <action
            android:id="@+id/action_movieListFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.iessanalberto.dam2.proyecto_tfg.peliculas.details.MovieDetailFragment"
        android:label="Detalles"
        tools:layout="@layout/fragment_movie_detail">

        <argument
            android:name="IdPelicula"
            android:defaultValue="-1"
            app:argType="string" />

        <action
            android:id="@+id/action_movieDetailFragment_to_personDetailFragment"
            app:destination="@id/personDetailFragment" />


    </fragment>

    <fragment
        android:id="@+id/movieSearchFragment"
        android:name="com.iessanalberto.dam2.proyecto_tfg.peliculas.search.MovieSearchFragment"
        android:label="Busqueda de películas"
        tools:layout="@layout/fragment_movie_search" >
        <action
            android:id="@+id/action_movieSearchFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/personDetailFragment"
        android:name="com.iessanalberto.dam2.proyecto_tfg.personas.PersonFragment"
        android:label="Detalles de personas"
        tools:layout="@layout/fragment_person_detail">

        <argument
            android:name="personId"
            android:defaultValue="-1"
            app:argType="integer" />

    </fragment>
</navigation>